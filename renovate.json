{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>RedHatInsights/konflux-pipelines//renovate/foreman_satellite/renovate.json"
  ],
  "timezone": "Europe/Prague",
  "tekton": {
    "automerge": true,
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "enabled": true,
    "ignoreTests": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "requirements.txt",
      "groupSlug": "pip-requirements"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "groupName": "go modules",
      "groupSlug": "go-modules"
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "dockerfiles",
      "groupSlug": "dockerfiles"
    }
  ]
}
